<div class="border col-6 py-3 ">
<h2>動画の情報を編集</h2>
<br>
<%= form_with model: @video, local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>
    <label>動画のタイトル <span class="badge badge-danger">必須</span></label>
    <%= f.text_field :title, class: "form-control" %> <br>
    <label>動画の説明 <span class="badge badge-danger">必須</span></label>
    <%= f.text_area :explanation, class: "form-control" %> <br>
    <label>都道府県 <span class="badge badge-danger">必須</span></label>
    <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"form-control col-4", id:"video-prefecture"}) %> <br>
    <label>その他住所</label><%= f.text_field :address, class: "form-control" %> <br>
    <label>カテゴリ <span class="badge badge-danger">必須</span></label>
    <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"form-control col-6", id:"video-category"}) %> <br>
    <p>動画 <span class="badge badge-danger">必須</span></p>
    <%= f.file_field :movie %> <br><br>
    <%= f.submit '更新する', class: "btn btn-info" %>
<% end %>
</div>